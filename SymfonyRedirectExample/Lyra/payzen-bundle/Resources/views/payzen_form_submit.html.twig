<form method="post" action="{{ path('payzen.paymentRedirect') }}" id="payzen_submit_form" >
    {% for key, value in params %}
        {% if value is not empty %}
            <input type="hidden" name="params[{{ key }}]" value="{{ value|escape }}"  />
        {% endif %}
    {% endfor %}

    {% for key_log, value_log in params_log %}
        {% if value_log is not empty %}
            <input type="hidden" name="params_log[{{ key_log }}]" value="{{ value_log|escape }}"  />
        {% endif %}
    {% endfor %}

    <button id="payzen_submit_button" type="submit" id="payzen_submit_button">{{ 'Pay with payzen'|trans }}</button>
</form>